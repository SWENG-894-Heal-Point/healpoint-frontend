{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "complexity": ["warn", 10],
    "max-lines": ["warn", 200],
    "max-lines-per-function": ["warn", 50],
    "max-params": ["warn", 5]
  }
}
